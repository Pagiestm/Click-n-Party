{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="flex items-center justify-center content-center h-svh">
    <div class="flex flex-col items-center sm:w-96 h-124 m-auto bg-custom-green rounded-[30px] shadow-md p-6 space-y-3">
        <h1 class="text-3xl font-bold mb-3">Inscription</h1>

        <p class="mb-3">Bienvenue sur Click'n Party</p>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.Nom, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full" text-lg mb-3',
                placeholder: 'Nom',
                required: 'required',
            }
        }) }}
        {{ form_row(registrationForm.Prenom, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full" text-lg mb-3',
                placeholder: 'Prénom',
                required: 'required',
            }
        }) }}
        {{ form_row(registrationForm.Telephone, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full" text-lg mb-3',
                placeholder: 'Téléphone',
                required: 'required',
            }
        }) }}
        {{ form_row(registrationForm.Adresse, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full" text-lg mb-3',
                placeholder: 'Adresse',
                required: 'required',
            }
        }) }}
        {{ form_row(registrationForm.email, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full" text-lg mb-3',
                placeholder: 'Email',
                required: 'required',
            }
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full" text-lg mb-3',
                placeholder: 'Mot de passe',
                required: 'required',
            }
        }) }}

        <button class="form-control py-1 px-2 rounded-full text-lg mb-3 bg-custom_boutton w-full border border-black" type="submit">Inscription</button>
        {{ form_end(registrationForm) }}

        <p class="text-xs">Vous avez déjà un compte ? <a href="{{ path('app_login') }}" class="text-black underline">Connectez-vous</a></p>
    </div>
</div>
{% endblock %}
