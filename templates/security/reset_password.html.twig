{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="flex items-center justify-center content-center h-screen bg-custom-green-light">
    <div class="flex flex-col items-center w-full sm:w-96 mx-4 sm:mx-0 h-auto m-auto bg-custom-green rounded-[30px] shadow-md p-6 space-y-3 text-center">
        <h1 class="text-3xl font-bold mb-3">Réinitialisation de mot de passe</h1>
        {% for message in app.flashes('error') %}
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative animate-slide-down text-center"
            role="alert"
            style="animation: slideDown 5s ease-in-out forwards; position: fixed; top: 2%; left: 0; right: 0; width: max-content; margin-left: auto; margin-right: auto;">
            <strong class="font-bold">Erreur !</strong>
            <span class="block sm:inline">{{ message }}</span>
        </div>
        {% endfor %}
        {{ form_start(passForm, {'attr': {'class': 'w-full flex flex-col space-y-3 text-center'}}) }}
        {{ form_widget(passForm.password, {'attr': {'class': 'form-control py-2 px-4 rounded-full w-full text-lg', 'placeholder': 'Nouveau mot de passe'}}) }}
        <div class="form-error text-center text-red-500 mb-2 mt-2">
            {{ form_errors(passForm.password) }}
        </div>
        <button type="submit" class="form-control py-2 px-4 rounded-full text-lg mb-3 bg-custom_boutton w-full border border-black">
            Envoyer
        </button>
        {{ form_end(passForm) }}
    </div>
</div>
{% endblock %}