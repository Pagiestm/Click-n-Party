{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex items-center justify-center content-center h-svh bg-custom-green-light">
    <form method="post" name="login"
        class="flex flex-col items-center sm:w-96 h-96 m-auto bg-custom-green rounded-[30px] shadow-md p-6 space-y-3 mx-4">
        {% if error %}
        <div class="alert alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="text-3xl font-bold mb-3">Connexion</h1>
        {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative animate-slide-down text-center"
            role="alert"
            style="animation: slideDown 5s ease-in-out forwards; position: fixed; top: 2%; left: 0; right: 0; width: max-content; margin-left: auto; margin-right: auto;">
            <strong class="font-bold">Succès !</strong>
            <span class="block sm:inline">{{ message }}</span>
        </div>
        {% endfor %}
        <p class="mb-3">Bienvenue sur Click'n Party</p>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
            class="form-control py-2 px-4 rounded-full w-full" text-lg mb-3" placeholder="Email" autocomplete="email"
            required autofocus>
        <input type="password" name="password" id="inputPassword" class="form-control py-2 px-4 rounded-full w-full"
            text-lg mb-3" placeholder="Password" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" class="mb-3">

        <button class="form-control py-2 px-4 rounded-full text-lg mb-3 bg-custom_boutton w-full border border-black"
            type="submit">
            Connexion
        </button>

        <a href="{{ path('forgotten_password') }}" class="text-black underline text-xs">Mot de passe oublié ?</a>
        <p class="text-xs">Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}"
                class="text-black underline">Inscrivez-vous</a></p>
    </form>
</div>
{% endblock %}