{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="flex items-center justify-center content-center h-svh bg-custom-green-light">
    <form method="post" name="login" class="flex flex-col items-center sm:w-96 h-96 m-auto bg-custom-green rounded-[30px] shadow-md p-6 space-y-3">
        {% if error %}
            <div class="alert alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    
        <h1 class="text-3xl font-bold mb-3">Connexion</h1>
        <p class="mb-3">Bienvenue sur Click'n Party</p>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control py-2 px-4 rounded-full w-full" text-lg mb-3" placeholder="Email" autocomplete="email" required autofocus>
        <input type="password" name="password" id="inputPassword" class="form-control py-2 px-4 rounded-full w-full" text-lg mb-3" placeholder="Password" autocomplete="current-password" required>
    
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" class="mb-3">
    
        <button class="form-control py-2 px-4 rounded-full text-lg mb-3 bg-custom_boutton w-full border border-black" type="submit">
            Connexion
        </button>

        <a href="" class="text-black underline text-xs">Mot de passe oubli√© ?</a>
        <p class="text-xs">Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}" class="text-black underline">Inscrivez-vous</a></p>
    </form>
</div>
{% endblock %}