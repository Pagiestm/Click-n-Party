{% extends 'base.html.twig' %}

{% block title %}Vos Factures{% endblock %}

{% block body %}
<div class="mx-auto md:py-4 md:px-20 bg-custom-green">
    {% include 'header.html.twig' %}
    <div class="flex justify-between items-center md:hidden py-2 ml-2">
        <a href="{{ path('app_home') }}" class="md:hidden flex items-center py-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor"
                class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Locations
        </a>
    </div>
    <h1 class="font-cotorisHeavy text-3xl text-center mb-4">Vos factures</h1>

    <div class="bg-white shadow-md rounded-lg px-8 pt-6 mb-4 flex flex-col ml-6 mr-6">
        <div class="mb-4 flex-grow">
            <div class="flex mb-4 items-center border-b border-gray-300 pb-2">
                <div class="w-full sm:w-1/3 text-center hidden sm:block">Type</div>
                <div class="w-full sm:w-1/2 text-center">Nom</div>
                <div class="w-1/4 text-center hidden sm:block">Mr/Mme</div>
                <div class="w-full sm:w-1/2 text-center">Action</div>
            </div>
            {% for invoice in invoices %}
                <div class="flex mb-4 items-center">
                    <div class="w-full sm:w-1/3 text-center hidden sm:block">
                        <i class="fas fa-file-alt"></i>
                    </div>
                    <div class="w-full sm:w-1/2 text-center">
                        {{ invoice }}
                    </div>
                    <div class="w-1/4 text-center hidden sm:block">
                        {{ Nom }}
                    </div>
                    <div class="w-full sm:w-1/2 text-center">
                        <a href="{{ asset('facture/' ~ invoice) }}" target="_blank">
                            <i class="fas fa-print"></i>
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="flex mb-4 items-center">
                    <div class="w-full text-center">
                        Vous n'avez pas de factures.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}