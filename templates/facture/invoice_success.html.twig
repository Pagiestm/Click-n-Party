{% extends 'base.html.twig' %}

{% block title %}Paiement réussi{% endblock %}

{% block body %}
<div class="mx-auto md:py-4 md:px-20 bg-custom-green">
    {% include 'header.html.twig' %}
    <div class="flex justify-between items-center md:hidden py-2 ml-2">
        <a href="{{ path('app_home') }}" class="md:hidden flex items-center py-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Locations
        </a>
    </div>
    {% for message in app.flashes('success') %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative animate-slide-down text-center"
        role="alert"
        style="animation: slideDown 5s ease-in-out forwards; position: fixed; top: 2%; left: 0; right: 0; width: max-content; margin-left: auto; margin-right: auto;">
        <strong class="font-bold">Succès !</strong>
        <span class="block sm:inline">{{ message }}</span>
    </div>
    {% endfor %}
    <div class="flex flex-col md:flex-row items-start justify-center ml-4 mr-4 mt-4 md:ml-16 md:mr-16 md:mt-8">
        <div class="md:w-1/3 bg-custom_boutton rounded-lg shadow-md hidden lg:block mr-8">
            {% include 'components/modalFormulaire.html.twig' %}
        </div>
        <div class="md:w-4/5 mx-auto md:mx-0">
            <h1 class="font-cotorisHeavy text-3xl text-center mb-8">Paiement réussi</h1>
            <p class="text-center mb-4">Votre paiement a été accepté et votre réservation a été transmise.</p>
            <p class="text-center mb-4"><a href="{{ path('app_download_invoice') }}" class="underline">Cliquez ici pour télécharger votre facture</a></p>
            <p class="text-center"><a href="{{ path('app_reserver') }}" class="underline">Cliquez ici pour aller à la liste des réservations</a></p>
        </div>
    </div>
</div>

{% include 'components/modalMobile.html.twig' %}
{% endblock %}