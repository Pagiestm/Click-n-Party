{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
<div class="mx-auto md:py-4 md:px-20 bg-custom-green-light">
	{% include 'header.html.twig' %}
	<div class="flex justify-between items-center md:hidden py-2 ml-2">
		<a href="{{ path('app_profil') }}" class="md:hidden flex items-center py-2">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor"
				class="h-6 w-6">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
			</svg>
			Profil
		</a>
	</div>
</div>
<div class="flex items-center justify-center content-center h-svh bg-custom-green-light">
    <form method="post" class="flex flex-col items-center sm:w-96 h-124 m-auto bg-custom-green rounded-[30px] shadow-md p-6 space-y-3 mx-4 sm:mx-0">
        <h1 class="text-3xl font-bold mb-3">Modifier Votre profil</h1>

        {{ form_start(form) }}
        {{ form_widget(form.Nom, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg mb-3',
                placeholder: 'Nom',
                required: 'required',
            }
        }) }}
        <div class="form-error text-center text-red-500 mb-2 mt-2">
            {{ form_errors(form.Nom) }}
        </div>
        {{ form_widget(form.Prenom, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg mb-3',
                placeholder: 'Prénom',
                required: 'required',
            }
        }) }}
        <div class="form-error text-center text-red-500 mb-2 mt-2">
            {{ form_errors(form.Prenom) }}
        </div>
        {{ form_widget(form.Telephone, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg mb-3',
                placeholder: 'Téléphone',
                required: 'required',
            }
        }) }}
        <div class="form-error text-center text-red-500 mb-2 mt-2">
            {{ form_errors(form.Telephone) }}
        </div>
        {{ form_widget(form.Adresse, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg mb-3',
                placeholder: 'Adresse',
                required: 'required',
            }
        }) }}
        <div class="form-error text-center text-red-500 mb-2 mt-2">
            {{ form_errors(form.Adresse) }}
        </div>
        {{ form_widget(form.email, {
            label: false,
            attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg mb-3',
                placeholder: 'Email',
                required: 'required',
            }
        }) }}
        <div class="form-error text-center text-red-500 mb-2 mt-2">
            {{ form_errors(form.email) }}
        </div>

        <button class="form-control py-1 px-2 rounded-full text-lg mb-3 bg-custom_boutton w-full border border-black" type="submit">Enregistrer</button>
        {{ form_end(form) }}
    </div>
</div>

{% include 'components/modalMobile.html.twig' %}
{% endblock %}