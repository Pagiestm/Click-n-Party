{% extends 'base.html.twig' %}

{% block title %}Commenter{% endblock %}

{% block body %}
<div class="mx-auto md:py-4 md:px-20 bg-custom-green">
    {% include 'header.html.twig' %}
    <div class="flex justify-between items-center md:hidden py-2 ml-2">
        <a href="{{ path('app_home') }}" class="md:hidden flex items-center py-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor"
                class="h-6 w-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Locations
        </a>
    </div>
    <div class="flex flex-col md:flex-row items-start justify-center ml-4 mr-4 mt-4 md:ml-16 md:mr-16 md:mt-8">
        <div class="md:w-1/3 bg-custom_boutton rounded-lg shadow-md hidden lg:block mr-8">
            {% include 'components/modalFormulaire.html.twig' %}
        </div>
        <div class="md:w-3/4 mx-auto md:mx-0">
            <h1 class="font-cotorisHeavy text-3xl text-center mb-8">Commenter</h1>

            <p class="mb-3 text-center">Partagez votre avis<br><span class="underline">{{ location.Nom }}</span></p>

            {{ form_start(commentForm) }}
            <div class="flex flex-col items-center mb-3">
                {{ form_label(commentForm.Avis, 'Votre avis', {'label_attr': {'class': 'text-lg mb-2'}}) }}
                {{ form_widget(commentForm.Avis, {
                label: false,
                attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg',
                placeholder: 'Votre avis',
                required: 'required',
                }
                }) }}
                <div class="form-error text-center text-red-500 mt-2">
                    {{ form_errors(commentForm.Avis) }}
                </div>
            </div>
            <div class="flex flex-col items-center">
                {{ form_label(commentForm.Note_Loueur, 'Votre note', {'label_attr': {'class': 'text-lg mb-2'}}) }}
                {{ form_widget(commentForm.Note_Loueur, {
                label: false,
                attr: {
                class: 'form-control py-2 px-4 rounded-full w-full text-lg',
                required: 'required',
                }
                }) }}
                <div class="form-error text-center text-red-500 mt-2">
                    {{ form_errors(commentForm.Note_Loueur) }}
                </div>
            </div>
            <div class="flex justify-center mt-3">
                <button class="form-control py-1 px-2 rounded-full text-lg bg-custom_boutton border border-black"
                    type="submit">Commenter</button>
            </div>
            {{ form_end(commentForm) }}
        </div>
    </div>
</div>

{% include 'components/modalMobile.html.twig' %}
{% include 'footer.html.twig' %}
{% endblock %}